@model QLNTWS.Models.HangHoa
@{
    ViewBag.Title = "Hàng hóa: Upload";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Upload hình Chi tiết cho sản phẩm </h2>
<h3 class="text-info">@Model.TenHangHoa</h3>
<div class="text-danger"> @ViewBag.ThongBao</div>

@using (Html.BeginForm("Upload", "HangHoas", FormMethod.Post,
    htmlAttributes: new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="custom-file">
        <input type="file" class="custom-file-input" id="customFile" name="taptins" multiple>
        <label class="custom-file-label" for="customFile">Chọn tập tin</label>
    </div>
    <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Upload</button>
    </div>
}

